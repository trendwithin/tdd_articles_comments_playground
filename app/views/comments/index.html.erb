<h1>Comments</h1>
<table>
  <tr>
    <th>Commenter</th>
    <th>Body</th>
  </tr>

  <% @comments.each do |comment| %>
  <tr>
    <td><%= comment.commenter %></td>
    <td><%= comment.body %></td>
    <td><%#= link_to 'Show', comment_path(comment) %></td>
    <td><%#= link_to 'Edit', edit_comment_path(comment) %></td>
    <td><%#= link_to 'Delete', comment, method: :delete, data: { confirm: 'Are you sure?'} %></td>
  </tr>
  <% end %>
</table>
